{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*).js",
      "destination": "/dist/$1.js"
    },
    {
      "source": "/(.*).css",
      "destination": "/dist/$1.css"
    },
    {
      "source": "/(.*).(png|jpg|ico|jpeg|gif|webp|svg)",
      "destination": "/dist/$1.$2"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/index.html"
    }
  ],
  "cleanUrls": true
}
